{
  "private": true,
  "name": "PostCSS",
  "homepage": "http://postcss.org/",
  "googleAnalyticsUA": "UA-73693753-1",
  "repository": "https://github.com/postcss/postcss.org.git",
  "twitter": "PostCSS",
  "repository": "https://github.com/postcss/postcss.org.git",
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:css": "stylelint \"web_modules/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "lint-staged": "lint-staged",
    "svgo-staged": "./scripts/svgo.sh",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run lint",
    "test": "npm run build",
    "styleguide-server": "styleguidist server",
    "styleguide-build": "styleguidist build",
    "predeploy": "npm run build",
    "deploy": "./scripts/deploy.sh"
  },
  "phenomic": {
    "assets": false,
    "CNAME": true,
    "offline": true
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ],
    "env": {
      "production": {
        "presets": [
          "babel-preset-react-optimize"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ],
    "rules": {
      "react/prefer-stateless-function": 0
    }
  },
  "eslintConfigRuleReact/prefer-stateless-function": "https://github.com/MoOx/phenomic/issues/46",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint"
  },
  "pre-commit": [
    "lint-staged",
    "svgo-staged"
  ],
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^6.0.0-beta.0",
    "babel-loader": "^6.2.0",
    "babel-plugin-webpack-loaders": "^0.3.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-1": "^6.3.13",
    "css-loader": "^0.23.0",
    "eslint": "^2.0.0",
    "eslint-config-i-am-meticulous": "^4.1.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.3.0",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "fontfaceobserver": "^1.6.3",
    "highlight.js": "^8.9.1",
    "history": "^2.0.0",
    "imports-loader": "^0.6.5",
    "invariant": "^2.2.0",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.2.1",
    "npm-run-all": "^1.7.0",
    "phenomic": "^0.20.1",
    "postcss-browser-reporter": "^0.4.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.7.0",
    "postcss-reporter": "^1.3.0",
    "pre-commit": "^1.1.2",
    "raw-loader": "^0.5.1",
    "react": "^0.14.0 || ^15.0.0-rc.1",
    "react-dom": "^0.14.0 || ^15.0.0-rc.1",
    "react-google-analytics": "^0.2.0",
    "react-helmet": "^3.0.0",
    "react-redux": "^4.4.1",
    "react-router": "^2.2.2",
    "react-styleguidist": "^2.1.0",
    "react-svg-inline": "^1.1.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "redux": "^3.0.0",
    "style-loader": "^0.12.4",
    "stylelint": "^6.8.0",
    "stylelint-config-standard": "^10.0.0",
    "svgo": "^0.6.1",
    "webpack": "^1.12.9",
    "whatwg-fetch": "^0.11.0"
  },
  "dependencies": {
    "react-highlight": "^0.6.1",
    "react-lazy-load": "^3.0.7"
  }
}
