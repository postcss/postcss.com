.doc {
  max-width: 70rem;
  padding: 2rem 2rem 1rem 13rem;
  margin: 0 auto;

  &:first-child {
    padding-top: 5rem;
  }
}

.doc_title {
  margin-bottom: 1rem;
  font-size: 1.5625rem;
  font-weight: lighter;
  font-weight: 300;
  line-height: 1.28;
  color: #3f526b;
}

.doc > p {
  margin-bottom: 1rem;
}

.doc > pre {
  margin-bottom: 1rem;
}

.doc > p code {
  font-family: Monaco, Menlo, "Fira Mono", monospace;
  font-size: 0.825rem;
}

html {
  scroll-padding-top: 90px;
}
